<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="./assets/css/succ.css">
    <link rel="shortcut icon" href="./assets/images/exam.png" type="image/x-icon">
    <title>Score</title>
</head>
<body>
    <div class="row" style="margin: 200px;" >
        <div class="col-md-4">
            <img src="./assets/images/success.gif" style="width: 100%;" alt="">
        </div>
        <div class="col-md-8">
            <div id="container" >
                <div class="whole" style="box-shadow:0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
                <div class="type">
                    <p  style="font-size:20px;font-weight: 700;">Result</p>
                    </div>
                <div class="plan">
            
                    <div class="header">
                        <span  style="font-size:50px;font-weight: 700; color: black;"><%=total%></sup>
                            <p class="month"  style="font-size:20px;font-weight: 700;">TOTAL SCORE</p>
                    </div>
                    <div class="content">
                        <ul>
                            <li  style="font-size:15px;font-weight: 700;color: black;"><span>NAME: </span> <%=username%></li>
                            <!-- <li  style="font-size:15px;font-weight: 700;color: black;"><span>ROLL NUMBER:</span> 789838</li> -->
                        </ul>
                    </div>
                    
                </div>
                <button class="btn btn-primary"   onclick="logout()">Finish and Logout</button>

            </div>
        </div>
    </div>
</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script>
        const logout=()=>{
            console.log(' in logout');
            localStorage.removeItem('questions')
            localStorage.removeItem('batch')
            localStorage.removeItem('q_id')
            localStorage.removeItem('ans')
            fetch(`http://localhost:3232/logout`)
        .then(res=>{
            console.log(res);
            if(res.ok && res)
            {
                return res.json()
            }
           
        
        })
        .then(data=>{
            window.location.replace('/login')
        })
    .catch(err=>{
          console.log(err);
        })
        .catch(err=>{
          console.log(err);
        })
        }
    </script>
</body>
</html>